<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About"
        android:id="@+id/about_page_title"
        android:padding="10dp"
        android:background="#437C41"
        android:textSize="25dp"
        android:typeface="serif"
        android:textColor="#f6f9fa"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It is very small game in which you can check your basic calculation. How fast you can calculate . Every correct answer, you will get one point and every wrong answer you will lose one point. I hope you will enjoy this basic game."
        android:id="@+id/about_page_text"
        android:textStyle="normal"
        android:typeface="serif"
        android:textSize="15dp"
        android:textColor="#3a3e4d"
        android:padding="8dp"
        android:fontFamily="serif"
        android:layout_gravity="left" />

</LinearLayout>
