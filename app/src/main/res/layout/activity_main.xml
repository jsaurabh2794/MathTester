<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saurabhsinghrajput.mathtester.MainActivity"
    android:background="#3b7739">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:id="@+id/timer_view"
        android:typeface="serif"
        android:textSize="30dp"
        android:textColor="#F75641"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/val1"
        android:typeface="sans"
        android:textSize="43dp"
        android:textColor="#F64448"
        android:textAlignment="center"
        android:layout_marginTop="81dp"
        android:textStyle="bold"
        android:layout_below="@+id/timer_view"
        android:layout_toLeftOf="@+id/symbol"
        android:layout_toStartOf="@+id/symbol"
        android:layout_marginRight="15dp"
        android:text="00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/val2"
        android:typeface="sans"
        android:textSize="43dp"
        android:textColor="#F64448"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/symbol"
        android:layout_toRightOf="@+id/symbol"
        android:layout_toEndOf="@+id/symbol"
        android:layout_marginLeft="15dp"
        android:text="00" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/symbol"
        android:layout_alignBottom="@+id/val1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opn2"
        android:typeface="sans"
        android:textSize="30dp"
        android:textColor="#0000FF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:clickable="true"
        android:text="00"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/val2"
        android:layout_alignLeft="@+id/val2"
        android:layout_alignStart="@+id/val2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opn1"
        android:typeface="sans"
        android:textSize="30dp"
        android:textColor="#0000FF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:clickable="true"
        android:text="00"
        android:layout_alignTop="@+id/opn2"
        android:layout_toLeftOf="@+id/decision"
        android:layout_toStartOf="@+id/decision" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opn4"
        android:typeface="sans"
        android:textSize="30dp"
        android:textColor="#0000FF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:clickable="true"
        android:text="00"
        android:layout_below="@+id/opn2"
        android:layout_alignLeft="@+id/opn2"
        android:layout_alignStart="@+id/opn2"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opn3"
        android:typeface="sans"
        android:textSize="30dp"
        android:textColor="#0000FF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:clickable="true"
        android:text="00"
        android:layout_alignTop="@+id/opn4"
        android:layout_alignLeft="@+id/opn1"
        android:layout_alignStart="@+id/opn1" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/decision"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:id="@+id/textView15"
        android:typeface="serif"
        android:textSize="30dp"
        android:textColor="#F75641"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/score_changer"
        android:typeface="monospace"
        android:textSize="30dp"
        android:textColor="#080808"
        android:textAlignment="center"
        android:layout_toStartOf="@+id/val1"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/val1"
        android:layout_alignEnd="@+id/val1" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Options:"
        android:id="@+id/textView16"
        android:typeface="serif"
        android:textSize="30dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_above="@+id/opn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/timer_view"
        android:layout_alignEnd="@+id/timer_view"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Question:"
        android:id="@+id/textView17"
        android:typeface="serif"
        android:textSize="30dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_above="@+id/symbol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/line2"
        android:scaleType="fitCenter"
        android:layout_below="@+id/timer_view"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
